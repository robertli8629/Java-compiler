	var x : integer
	var y : integer
	var z : integer

	x := 2
	y := 3
	z := (x > y ? x : y)

	if (x < y) 
	then { 
		put (x + y), " expected: 5", newline
	} else {
		put (x - y), "error", newline
	} 
	fi
	
	if ((x * 2) > y) 
	then {
		put (x / 2), " expected: 1", newline
	}
	fi
	
	if (x < y and (x + 2) > y) 
	then {
		put x, " expected: 2", newline
	}
	fi
	
	if (x < y or x > y) 
	then { 
		put y, " expected: 3", newline
	} 
	fi
	
	if (not (x <= y or x >= y)) 
	then {
		put 1, "error", newline
	}
	fi
	
	if ((x + 1) = y) 
	then {
		put 2, " expected: 2", newline
	} 
	fi
	
	if (x not = y) 
	then {
		put 3, " expected: 3", newline
	} 
	fi
	
	if (-x > y) 
	then {
	 	put 4, " error", newline
	} 
	fi
	
	if (true or false) 
	then {
		put "true", " expected: true", newline
	}
	fi
	
}
